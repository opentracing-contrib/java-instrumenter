<project
  xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>io.opentracing.contrib.specialagent</groupId>
    <artifactId>specialagent</artifactId>
    <version>1.5.1-SNAPSHOT</version>
  </parent>
  <groupId>io.opentracing.contrib.specialagent.test</groupId>
  <artifactId>test</artifactId>
  <packaging>pom</packaging>
  <name>SpecialAgent Tests</name>
  <url>https://github.com/opentracing-contrib/java-specialagent/tree/master/test</url>
  <properties>
    <failIfNoTests>false</failIfNoTests>
    <sa.log.level>FINER</sa.log.level>
  </properties>
  <profiles>
    <profile>
      <id>okhttp</id>
      <activation>
        <property>
          <name>all</name>
        </property>
      </activation>
      <modules>
        <module>okhttp-3.14.2</module>
        <module>okhttp-3.5.0</module>
        <module>okhttp-4.0.0</module>
        <module>okhttp-4.2.2</module>
      </modules>
    </profile>
    <profile>
      <id>jdbc</id>
      <activation>
        <property>
          <name>all</name>
        </property>
      </activation>
      <modules>
        <module>jdbc</module>
      </modules>
    </profile>
    <profile>
      <id>concurrent</id>
      <activation>
        <property>
          <name>all</name>
        </property>
      </activation>
      <modules>
        <module>concurrent</module>
      </modules>
    </profile>
    <profile>
      <id>mongo-driver</id>
      <activation>
        <property>
          <name>all</name>
        </property>
      </activation>
      <modules>
        <module>mongo-driver-3.9.0</module>
        <module>mongo-driver-3.11.0</module>
        <module>mongo-driver-async-3.11.0</module>
        <module>mongo-driver-async-3.9.0</module>
        <module>mongo-driver-reactive-1.12.0</module>
        <module>mongo-driver-reactive-1.8.0</module>
      </modules>
    </profile>
    <profile>
      <id>servlet-jetty</id>
      <activation>
        <property>
          <name>all</name>
        </property>
      </activation>
      <modules>
        <module>servlet-jetty-7.6.21</module>
        <module>servlet-jetty-8.2.0</module>
        <module>servlet-jetty-9.2.15</module>
      </modules>
    </profile>
    <profile>
      <id>servlet-tomcat</id>
      <activation>
        <property>
          <name>all</name>
        </property>
      </activation>
      <modules>
        <module>servlet-tomcat-7.0.65</module>
        <module>servlet-tomcat-8.0.53</module>
        <module>servlet-tomcat-8.5.47</module>
        <module>servlet-tomcat-9.0.27</module>
      </modules>
    </profile>
    <profile>
      <id>aws-sdk-1</id>
      <activation>
        <property>
          <name>all</name>
        </property>
      </activation>
      <modules>
        <module>aws-sdk-1.11.570</module>
      </modules>
    </profile>
    <profile>
      <id>aws-sdk-2</id>
      <activation>
        <property>
          <name>all</name>
        </property>
      </activation>
      <modules>
        <module>aws-sdk-2.7.15</module>
      </modules>
    </profile>
    <profile>
      <id>cassandra</id>
      <activation>
        <property>
          <name>all</name>
        </property>
      </activation>
      <modules>
        <module>cassandra-3.0.0</module>
        <module>cassandra-3.7.2</module>
        <module>cassandra-4.0.0</module>
        <module>cassandra-4.2.0</module>
      </modules>
    </profile>
    <profile>
      <id>jms-1</id>
      <activation>
        <property>
          <name>all</name>
        </property>
      </activation>
      <modules>
        <module>jms-1</module>
      </modules>
    </profile>
    <profile>
      <id>jms-2</id>
      <activation>
        <property>
          <name>all</name>
        </property>
      </activation>
      <modules>
        <module>jms-2</module>
      </modules>
    </profile>
    <profile>
      <id>elasticsearch</id>
      <activation>
        <property>
          <name>all</name>
        </property>
      </activation>
      <modules>
        <module>elasticsearch-6.4.0</module>
        <module>elasticsearch-7.3.1</module>
      </modules>
    </profile>
    <profile>
      <id>akka-http</id>
      <activation>
        <property>
          <name>all</name>
        </property>
      </activation>
      <modules>
        <module>akka-http-10.1.0</module>
        <module>akka-http-10.1.10</module>
      </modules>
    </profile>
    <profile>
      <id>rxjava</id>
      <activation>
        <property>
          <name>all</name>
        </property>
      </activation>
      <modules>
        <module>rxjava-2.1.0</module>
        <module>rxjava-2.2.12</module>
      </modules>
    </profile>
    <profile>
      <id>default</id>
      <activation>
        <file>
          <missing>.pom-packaging-marker</missing>
        </file>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-jar-plugin</artifactId>
            <executions>
              <execution>
                <goals>
                  <goal>test-jar</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>io.opentracing.contrib.specialagent</groupId>
            <artifactId>itest-maven-plugin</artifactId>
            <version>${project.version}</version>
            <executions>
              <execution>
                <goals>
                  <goal>itest</goal>
                </goals>
                <phase>test</phase>
              </execution>
            </executions>
            <configuration>
              <mainClasses>
                <mainClass>io.opentracing.contrib.specialagent.test.*</mainClass>
              </mainClasses>
              <arguments>
                <argument>-javaagent:${settings.localRepository}/io/opentracing/contrib/specialagent/opentracing-specialagent/${project.version}/opentracing-specialagent-${project.version}.jar</argument>
                <argument>-Dsa.log.level=${sa.log.level}</argument>
                <argument>-Dsa.tracer=mock</argument>
                <argument>-classpath</argument>
                <classpath/>
              </arguments>
            </configuration>
          </plugin>
        </plugins>
      </build>
      <dependencies>
        <dependency>
          <groupId>junit</groupId>
          <artifactId>junit</artifactId>
        </dependency>
        <dependency>
          <groupId>io.opentracing</groupId>
          <artifactId>opentracing-util</artifactId>
        </dependency>
        <dependency>
          <groupId>io.opentracing</groupId>
          <artifactId>opentracing-mock</artifactId>
        </dependency>
        <dependency>
          <groupId>io.opentracing.contrib.specialagent</groupId>
          <artifactId>opentracing-specialagent-util</artifactId>
        </dependency>
      </dependencies>
    </profile>
  </profiles>
</project>